---
import Layout from '../layouts/Layout.astro'
import VehicleCreator from '../components/VehicleCreator.tsx'
---

<Layout title="Factory VehÃ­culos">
	<main>
		<VehicleCreator client:load/>
    </main>
</Layout>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap');
	main {
		padding: 1rem;
	}

	span {
		display: inline-block;
		width: 20px;
	}

	select {
		border: 2px solid #000;
		border-radius: 30px;
		padding: 8px;
		font-family: inter;
	}
	#vehicleCard {
		background-color: red;
	}
	#form {
		display: flex;
		width: 100%;
		justify-content: space-around;
		align-items: center;
		border-bottom: 2px solid #000;
		background-color: pink;
		font-family: Inter;
		font-weight: 600;
		height: 64px;
		margin: 0;
		padding: 0;
	}
	
	input {
		border: 2px solid #000;
		outline: none;
		border-radius: 30px;
		padding: 8px;
		font-family: inter;
	
	}

	button {
		border: 2px solid #000;
		border-radius: 30px;
		padding: 8px;
		font-family: inter;
		font-weight: 600;
	
	}

	body, main {
		padding: 0;
		margin: 0;
	}

	#vehicles {
		margin-top: 20px;
		display: flex;
		flex-wrap: wrap;
		width: 100%;
		height: 100%;
		justify-content: space-around;
	}

	#vehicleCard {
		border-radius: 20px;
		display: flex;
		padding: 20px;
		margin: 5px;
		border: 2px solid #000;
	}
	#vehicleIcon {
		box-shadow: 0 0 10px 0 rgb(255, 255, 255);
		border-radius: 20px;
		padding: 8px;
		width: 100px;
		height: 100px;
		font-size: 100px;
		display: flex;
		justify-content: center;
		align-items: center;
		margin-right: 20px;
	}
	#vehicleInfo {
		color: white;
		width: 200px;
		font-family: Inter;
	}
</style>
